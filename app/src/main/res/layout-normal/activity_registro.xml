<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp">
        <TextView
            android:text="@string/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </TextView>
        <EditText
            android:inputType="text"
            android:id="@+id/name_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </EditText>
        <TextView
            android:text="@string/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </TextView>
        <EditText
            android:id="@+id/detail_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </EditText>
        <TextView
            android:text="@string/item_lote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </TextView>
        <EditText
            android:id="@+id/lote_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </EditText>
        <TextView
            android:text="@string/item_caducity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </TextView>
        <EditText
            android:id="@+id/caducity_input"
            android:inputType="date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </EditText>
        <TextView
            android:text="@string/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </TextView>
        <EditText
            android:id="@+id/quantity_input"
            android:inputType="number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </EditText>
        <TextView
            android:text="@string/item_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </TextView>
        <EditText
            android:id="@+id/key_input"
            android:inputType="number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </EditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<!--
            <Button
                android:text="Guardar"
                android:onClick="onSaveExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Button>
-->
            <Button
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_text_button_"></Button>

            <Button
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="onCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_text_button"></Button>
        </LinearLayout>
        <DatePicker
            android:datePickerMode="spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></DatePicker>
    </LinearLayout>
</ScrollView>